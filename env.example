# Configuración de Email (SMTP)
# Para Gmail: smtp.gmail.com
# Para Outlook: smtp-mail.outlook.com
# Para Zoho: smtp.zoho.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu-email@gmail.com
SMTP_PASS=tu-contraseña-de-aplicación

# Número de WhatsApp (formato internacional)
WHATSAPP_NUMBER=+34XXXXXXXXX

# URL del sitio web
NEXT_PUBLIC_SITE_URL=https://fisiomamifera.com

# Configuración de Google Analytics (opcional)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# Configuración de Google Search Console (opcional)
GOOGLE_VERIFICATION=tu-código-de-verificación

# Configuración de reCAPTCHA (opcional)
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=tu-site-key
RECAPTCHA_SECRET_KEY=tu-secret-key

